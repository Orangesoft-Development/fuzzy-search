{
    "name": "orangesoft/fuzzy-search",
    "description": "Fuzzy string search",
    "keywords": ["fuzzy", "search", "levenshtein", "damerau-levenshtein", "jaro", "jaro-winkler", "similar-text"],
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Denisyuk",
            "email": "a@denisyuk.by",
            "homepage": "https://denisyuk.by/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Orangesoft\\FuzzySearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orangesoft\\FuzzySearch\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}