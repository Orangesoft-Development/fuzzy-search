{
    "name": "orangesoft/fuzzy-search",
    "description": "Fuzzy string search",
    "keywords": ["fuzzy", "search", "levenshtein", "damerau-levenshtein", "jaro", "jaro-winkler", "similar-text", "unicode"],
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksandr Denisyuk",
            "email": "a@denisyuk.by",
            "homepage": "https://denisyuk.by/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "symfony/string": "^6.0"
    },
    "require-dev": {
        "phpbench/phpbench": "^1.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Orangesoft\\FuzzySearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orangesoft\\FuzzySearch\\Tests\\": "tests/",
            "Orangesoft\\FuzzySearch\\Benchmarks\\": "benchmarks/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "bench": "vendor/bin/phpbench run --report=fuzzy-search --ansi"
    },
    "config": {
        "sort-packages": true
    }
}
